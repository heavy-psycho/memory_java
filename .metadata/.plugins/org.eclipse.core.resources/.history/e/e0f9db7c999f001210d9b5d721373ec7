			a.montre();
			indiceCarteRetourne();
			//b.start();
			//reiniNbCarteRetourne();
			if(tabCartes[i[1]].equals(tabCartes[i[0]])){
				System.out.println("Paire trouvée !");
				tabCartes[i[1]].montre();
				tabCartes[i[0]].montre();
				reiniNbCarteRetourne();
			}
			else{
			System.out.println("Pas la bonne paire !");
			a.montre();
			b.start();
			reiniNbCarteRetourne();
			}
		}
			else{
				reiniNbCarteRetourne();
			}

			
		/*a.montre();
